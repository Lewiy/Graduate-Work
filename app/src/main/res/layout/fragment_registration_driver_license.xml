<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/driver_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/driver_license"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/license_expiration_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/license_expiration_date"
            android:inputType="date"
            android:maxLines="1"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/front_driver_license"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/default_license"
        android:text="@string/front_foto_license" />

    <Button
        android:id="@+id/back_driver_license"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/default_license"
        android:text="@string/back_foto_license" />

</LinearLayout>